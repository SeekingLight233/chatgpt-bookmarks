{
  "name": "chatgpt-bookmarks",
  "displayName": "ChatGPT Bookmarks",
  "version": "0.1.0",
  "description": "A chrome extension for managing chatgpt conversations.",
  "author": "SeekingLight",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build && rm -f build/chrome-mv3-prod.zip && cd build && zip -r chrome-mv3-prod.zip chrome-mv3-prod",
    "package": "plasmo package",
    "format": "prettier --write .",
    "test": "jest"
  },
  "dependencies": {
    "@notionhq/client": "^2.2.5",
    "@plasmohq/messaging": "^0.4.0",
    "@tryfabric/martian": "^1.2.4",
    "ahooks": "^3.7.7",
    "plasmo": "^0.76.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hot-toast": "^2.4.1",
    "resso": "^0.14.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.4",
    "@babel/preset-react": "^7.22.3",
    "@babel/preset-typescript": "^7.21.5",
    "@plasmohq/prettier-plugin-sort-imports": "3.6.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/chrome": "0.0.227",
    "@types/jest": "^29.5.2",
    "@types/node": "18.15.11",
    "@types/react": "18.0.32",
    "@types/react-dom": "18.0.11",
    "babel-jest": "^29.5.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^29.1.0",
    "typescript": "5.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "yarn format"
  },
  "manifest": {
    "host_permissions": [
      "https://api.notion.com/*"
    ],
    "permissions": [
      "storage",
      "tabs",
      "clipboardRead"
    ]
  }
}
